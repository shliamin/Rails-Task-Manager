<div class="box">
  <h1><%= @task.title %></h1>
  <p><%= @task.description %></p>
  <p>Completed: <%= @task.completed ? "Yes" : "No" %></p>
  <div class="actions">
    <%= link_to 'Edit', edit_task_path(@task), class: 'button' %>
    <%= link_to 'Back', tasks_path, class: 'button' %>
  </div>
</div>
